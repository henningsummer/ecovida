<p><%= link_to 'Ínicio', root_path %> -
<%= link_to 'Cadastros', records_path %> -
Listando Documentos
</p>

<% if @documents.count != 0 %>
  <h1>Listando tipos de grupos</h1>

  <table class = "table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Tipo de envio</th>
        <th>Sujeitos</th>
        <th>Status</th>
        <th>Necessário para gerar certificado?</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td><%= document.name %></td>
          <td><%= truncate(document.description) %></td>
          <td><%= document.upload_type_humanize %></td>
          <td><%= document.subject_humanize %></td>
          <td><%= document.status_humanize %></td>
          <td><%= document.required_for_certificate_humanize %></td>
          <td><%= link_to 'Mostrar', [:records, document] %></td>
          <td><%= link_to 'Editar', edit_records_document_path(document) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= paginate @documents %>

<% else %>
  <h3>Não há documentos cadastrados</h3>
<% end %>

<%= link_to 'Novo Documento', new_records_document_path, {class: "btn btn-default"} %>
