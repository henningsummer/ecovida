 <div class="container">
        <div class = "login-image">
          <%= image_tag("logo.png") %>
        </div>
	<div class="login-container">
            <div id="output"></div>

            <div class="form-box">
              <%= simple_form_for(@user_session, html: { role: "form" }) do |f| %>
                <% if @user_session.errors.has_key? :base %>
                  <p align="center">Login ou senha inv√°lidos</p>
                <% end %>
                <p align="center"><%= notice %></p>
                <div class="form-group">
                  <%= f.text_field :login, autofocus: true, placeholder: 'E-Mail' %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, placeholder: 'Senha' %>
                </div>
                 <%= f.button :submit, class: 'button_login' %>
              <% end %>
            </div>
        </div>
        
</div>   
  