<% @documents.each do |document| %>
  <div class="panel-group">
  <div class="panel panel-default <%= panel_color(document, @sended_documents) %> panel_<%= document.id %>">
      <div class="panel-heading">
        <h4 class="panel-title">
        <a data-toggle="collapse" href="#collapse-<%= document.id %>"><%= "#{ "*" if document.required_for_certificate_yes_answer? } #{document.name}" %> - <strong class = "title_status_<%= document.id %>"><%= send_document_status(document, @sended_documents) %></strong></a>
        </h4>
      </div>
      <div id="collapse-<%= document.id %>" class="panel-collapse collapse">
        <div class = "panel-body"%>
          <p><strong><%= document.description %></strong></p>
        <% if sended = document_sended_for(document, @sended_documents) %>
          <%= render "application/send_documents/manage_#{sended.status}_documents", document: document, sended: sended %>
        <% else %>
          <%= render "application/send_documents/manage_no_documents", document: document %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
