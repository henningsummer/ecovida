<%= simple_form_for([@group, @farmer, @farmer_family]) do |f| %>
  <%= show_errors(@farmer_family) %>

  <div class="row">
    <div class="col-md-3">
      <%= f.input :name %>

      <%= f.input :cpf %>

      <%= f.input :gender, collection: Genders.to_a, include_blank: false %>

      <%= f.input :birthday, as: :date_picker, input_html: {value: f.object.birthday.try(:strftime, '%d/%m/%Y')} %>

      <%= f.submit t "modules.farmer_families.new_when_#{@farmer.number_type}", data: {"disable-with" => "Salvando..."} %>
    </div>
  </div>


<% end %>
